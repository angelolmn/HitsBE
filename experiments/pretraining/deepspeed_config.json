{
  "train_batch_size": 1000,
  "gradient_accumulation_steps": 2,
  "fp16": {
    "enabled": true,
    "loss_scale": 0,
    "initial_scale_power": 16,
    "hysteresis": 2,
    "min_loss_scale":1
  },
  "zero_optimization": {
    "stage": 1
  },
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 0.002,
      "betas": [0.9, 0.98],
      "eps": 1e-6,
      "weight_decay": 0.01
    }
  },
  "scheduler": {
    "type": "WarmupDecayLR",
    "params": {
      "total_num_steps": 42,
      "warmup_min_lr": 0.0,
      "warmup_max_lr": 0.002,
      "warmup_num_steps": 8
    }
  }
}
